pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                    docket{
                        image 'node:18-alpine'
                        reuseNode true
                    }
        n   }
            steps{
                sh '''
                  ls -la
                  node --version
                  npm --version
                  npm ci
                  npm run build
                  ls -la
                '''
               }
            }
        }
    }

